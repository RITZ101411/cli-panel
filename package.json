{
  "name": "cli-panel",
  "displayName": "CLI Panel",
  "description": "CLI tool panel in VSCode sidebar",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "cliPanel",
          "name": "CLI Panel",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "CLI Runner",
      "properties": {
        "cliRunner.shell": {
          "type": "string",
          "default": "",
          "description": "Shell path (bash/cmd/powershell)"
        },
        "cliRunner.shellArgs": {
          "type": "array",
          "default": [],
          "description": "Shell arguments"
        },
        "cliRunner.cwd": {
          "type": "string",
          "default": "",
          "description": "Working directory"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "node-pty": "^0.10.1"
  }
}
